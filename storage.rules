rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Video files storage
    match /videos/{videoFile} {
      // Only admins can upload/delete videos
      allow write, delete: if isAdmin();

      // TEMPORARY: Allow authenticated users to read videos
      // TODO: Implement proper signed URL generation with IAM permissions
      // For now, access control is done at application level (enrollment check in Cloud Function)
      allow read: if isAuthenticated();
    }

    // Any other files - restrict completely
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
